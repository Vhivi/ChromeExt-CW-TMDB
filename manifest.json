{
  "manifest_version": 3,
  "name": "CaptainWatch → TMDB",
  "version": "1.0.0",
  "description": "Transforme l’URL CaptainWatch de l’onglet courant en URL TMDB correspondante.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.captainwatch.com/serie/*",
    "https://www.captainwatch.com/film/*",
    "https://www.captainwatch.com/artiste/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Aller sur TMDB depuis CaptainWatch"
  },
  "icons": {
    "48": "icons/icon48.png"
  }
}
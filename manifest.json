{
  "manifest_version": 3,
  "name": "CaptainWatch → TMDB",
  "version": "2.2.0",
  "description": "Transforme l’URL CaptainWatch de l’onglet courant en URL TMDB correspondante et inversement.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.captainwatch.com/serie/*",
    "https://www.captainwatch.com/film/*",
    "https://www.captainwatch.com/artiste/*",
    "https://www.themoviedb.org/tv/*",
    "https://www.themoviedb.org/movie/*",
    "https://www.themoviedb.org/person/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Aller sur TMDB depuis CaptainWatch ou vice-versa"
  },
  "icons": {
    "48": "icons/icon48.png"
  }
}
